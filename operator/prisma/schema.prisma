generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Order {
  id String @id @default(dbgenerated("prefix_uuid('order-'::text)"))
  trader String
  tickToSellAt String
  zeroForOne Boolean
  inputAmount String?
  outputAmount String?
  tokenInput String
  poolKey PoolKey @relation(fields: [poolKeyId], references: [id])
  poolKeyId String
  permit2Signature String
  startTime DateTime
  deadline DateTime

  @@index([trader])
  @@index([poolKeyId])
  @@unique([trader, tickToSellAt, zeroForOne, tokenInput, poolKeyId])
}

model PoolKey {
  id String @id @default(dbgenerated("prefix_uuid('poolKey-'::text)"))
  token0 String
  token1 String
  fee String
  tickSpacing String
  hooks String
  orders Order[]

  @@index([token0])
  @@index([token1])
  @@unique([token0, token1, fee, tickSpacing, hooks])
}
